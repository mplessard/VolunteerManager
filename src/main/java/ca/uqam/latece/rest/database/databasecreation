DROP TABLE GardenResponsibility;
DROP TABLE Volunteer;
DROP TABLE role;
DROP TABLE Garden;
DROP TABLE GardenCategory;

CREATE TABLE Role(
	ID integer NOT NULL PRIMARY KEY AUTO_INCREMENT,
	name varchar(255) NOT NULL)
;
CREATE TABLE Volunteer(
	ID integer NOT NULL PRIMARY KEY AUTO_INCREMENT,
	username varchar(255) NOT NULL,
	email varchar(255) NOT NULL,
	password varchar(255) NOT NULL,
	role integer NOT NULL DEFAULT 1,
	token varchar(255),
	token_expiration_date date,
	FOREIGN KEY (role) REFERENCES role(ID) )
;
CREATE TABLE GardenCategory(
	ID integer NOT NULL PRIMARY KEY AUTO_INCREMENT,
	name varchar(255) NOT NULL)
;
CREATE TABLE Garden(
	ID integer NOT NULL PRIMARY KEY AUTO_INCREMENT,
	name varchar(255) NOT NULL,
	ID_category integer NOT NULL,
	address varchar(255),
	FOREIGN KEY (ID_category) REFERENCES GardenCategory(ID)
)
;
CREATE TABLE GardenResponsibility(
	ID integer NOT NULL PRIMARY KEY AUTO_INCREMENT,
	ID_Volunteer integer NOT NULL,
	ID_Garden integer NOT NULL,
	task varchar(255) NOT NULL,
	CONSTRAINT fk_volunteer FOREIGN KEY (ID_Volunteer) REFERENCES Volunteer(ID) ON DELETE CASCADE,
	CONSTRAINT fk_garden FOREIGN KEY (ID_Garden) REFERENCES Garden(ID) ON DELETE CASCADE)
;
